{
    "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Web/sites"
            },
            {
              "anyOf": [
                {
                  "field": "Microsoft.Web/sites/siteConfig.alwaysOn",
                  "notEquals": "on"
                },
                {
                  "field": "Microsoft.Web/sites/siteConfig.alwaysOn",
                  "exists": "false"
                }
              ]
            }
          ]
        },
        "then": {
          "effect": "audit"
        }
      }
}